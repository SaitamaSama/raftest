{
  "compilerOptions": {
    "target": "es2018",
    "strict": true,
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true
  },
  "include": ["frontend/src/**/*", "backend/src/**/*"],
  "exclude": ["node_modules"]
}
